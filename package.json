{
  "name": "sourcegraph-mcp",
  "version": "0.1.0",
  "description": "A comprehensive Model Context Protocol (MCP) server for Sourcegraph code search and intelligence",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sourcegraph-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint src/ tests/",
    "lint:fix": "eslint --cache --cache-location node_modules/.cache/eslint src/ tests/ --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "agent:post-report": "npm run lint && npm run format:check && npm run typecheck && npm run coverage && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sourcegraph",
    "code-search",
    "code-intelligence",
    "ai",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tylder/sourcegraph-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Tylder/sourcegraph-mcp/issues"
  },
  "homepage": "https://github.com/Tylder/sourcegraph-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.21.1",
    "graphql": "16.12.0",
    "graphql-request": "7.3.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/node": "22.13.12",
    "@vitest/coverage-v8": "4.0.7",
    "dotenv-cli": "^11.0.0",
    "eslint": "9.39.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3",
    "vitest": "4.0.7"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --cache-location node_modules/.cache/eslint --fix",
      "prettier --write"
    ]
  }
}
